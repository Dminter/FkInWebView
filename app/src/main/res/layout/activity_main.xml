<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jmx.fkinwebview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="很苦恼N多app内置WebView打开链接，遂写此小插件。灵感来源：一款Xposed模块 去你大爷的内置浏览器。基于AccessibilityService实现。" />


    <ImageView
        android:id="@+id/qrImg"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/qr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrImg"
        android:layout_centerHorizontal="true"
        android:text="微信：xm0ff255" />


    <Button
        android:id="@+id/switchCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="复制链接即刻打开" />

    <Button
        android:id="@+id/switchPlugin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchCopy"
        android:text="开启插件" />
</RelativeLayout>
